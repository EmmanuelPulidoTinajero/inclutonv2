{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "node",
      "@types/mdx",
      "@types/gtag.js",
      "@types/unist",
      "@types/hast",
      "@types/estree"
    ]
  },
  "include": [
    "src/**/*",
    "docs/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": ["node_modules"]
}